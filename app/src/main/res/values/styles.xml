<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:textColorSecondary">@color/text_secondary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:windowBackground">@color/window_background</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.Toolbar">
		<item name="android:typeface">sans</item>
		<item name="android:textColorPrimary">@color/toolbar_primary</item>
		<item name="android:textColorSecondary">@color/toolbar_secondary</item>
		<item name="colorControlNormal">@color/toolbar_primary</item>
	</style>

	<style name="AppTheme.PopupTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

	<style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/accent</item>
		<item name="android:textColorPrimary">@color/primary</item>
		<item name="android:background">@color/window_background</item>
	</style>

</resources>
